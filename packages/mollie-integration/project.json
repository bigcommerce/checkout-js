{
  "name": "mollie-integration",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/mollie-integration/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint --no-error-on-unmatched-pattern \"packages/mollie-integration/src/**/*.ts\" \"packages/mollie-integration/src/**/*.tsx\""
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/packages/mollie-integration"
      ],
      "options": {
        "jestConfig": "packages/mollie-integration/jest.config.js",
        "passWithNoTests": false
      }
    }
  },
  "tags": [
    "scope:integration"
  ]
}