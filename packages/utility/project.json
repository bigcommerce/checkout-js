{
  "name": "utility",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utility/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/utility/src/**/*.ts",
          "packages/utility/src/**/*.tsx"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/packages/utility"
      ],
      "options": {
        "jestConfig": "packages/utility/jest.config.js"
      }
    }
  },
  "tags": [
    "scope:shared"
  ]
}
